<Window x:Class="EFT_OverlayAPP.RequiredItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFT_OverlayAPP"
        mc:Ignorable="d"
        Title="Required Items"
        Height="600"
        Width="800"
        Topmost="True">
    <!-- Main Content Grid -->
    <Grid>
        <Grid x:Name="MainContent" Visibility="{Binding IsRequiredDataLoading, Converter={StaticResource InverseBooleanVisibilityConverter}}">
            <DockPanel>
                <!-- Tabs -->
                <TabControl x:Name="MainTabControl">
                    <!-- Required Items Tab -->
                    <TabItem x:Name="RequiredItemsTab" Header="Required Items">
                        <DockPanel>
                            <!-- Search and Filters -->
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
                                <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,5,0" TextChanged="SearchTextBox_TextChanged"/>
                                <ComboBox x:Name="TypeFilterComboBox" Width="150" Margin="0,0,5,0" SelectionChanged="TypeFilterComboBox_SelectionChanged"/>
                                <ComboBox x:Name="CompletionFilterComboBox" Width="150" Margin="0,0,5,0" SelectionChanged="CompletionFilterComboBox_SelectionChanged"/>
                                <ComboBox x:Name="SortOrderComboBox" Width="150" Margin="0,0,5,0" SelectionChanged="SortOrderComboBox_SelectionChanged"/>
                            </StackPanel>

                            <!-- Required Items List -->
                            <ListView x:Name="RequiredItemsListView" Margin="5">
                                <!-- ItemContainerStyle -->
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsComplete}" Value="True">
                                                <Setter Property="Background" Value="LightGreen"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <!-- Define ItemTemplate -->
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,5">
                                            <StackPanel Orientation="Horizontal" Margin="5">
                                                <!-- Item Icon -->
                                                <Image Source="{Binding Item.IconLink}" Width="50" Height="50" Margin="0,0,5,0"/>
                                                <!-- Item Details -->
                                                <StackPanel Orientation="Vertical">
                                                    <!-- Item Name and FIR Icon -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Item.Name}" FontWeight="Bold"/>
                                                        <Image Source="pack://application:,,,/FIR.png"
                                                           Width="16" Height="16" Margin="5,0,0,0"
                                                           Visibility="{Binding IsFoundInRaid, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                    <!-- Quantity with Increment/Decrement Buttons -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Quantity: "/>
                                                        <TextBlock Text="{Binding QuantityOwnedNeeded}"/>
                                                        <Button Content="-" Width="20" Margin="5,0" Click="DecrementButton_Click">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsCombined}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                        <Button Content="+" Width="20" Click="IncrementButton_Click">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsCombined}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </StackPanel>
                                                    <!-- Source Info (Trader Icon and Quest Name or Hideout Station Icon and Level) -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <!-- Source Icon -->
                                                        <Image Source="{Binding DisplaySourceIcon}" Width="20" Height="20" Margin="0,0,5,0"/>
                                                        <!-- Source Detail -->
                                                        <TextBlock Text="{Binding SourceDetail}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <!-- Grouping -->
                                <ListView.GroupStyle>
                                    <GroupStyle>
                                        <GroupStyle.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Background="LightGray">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" Padding="5"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GroupStyle.HeaderTemplate>
                                    </GroupStyle>
                                </ListView.GroupStyle>
                            </ListView>
                        </DockPanel>
                    </TabItem>

                    <!-- Combined Required Items Tab -->
                    <TabItem x:Name="CombinedRequiredItemsTab" Header="Combined Required Items">
                        <DockPanel>
                            <!-- Search and Filters -->
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
                                <TextBox x:Name="CombinedSearchTextBox" Width="200" Margin="0,0,5,0" TextChanged="CombinedSearchTextBox_TextChanged"/>
                                <ComboBox x:Name="CombinedCompletionFilterComboBox" Width="150" Margin="0,0,5,0" SelectionChanged="CombinedCompletionFilterComboBox_SelectionChanged"/>
                                <!-- Sort Order ComboBox -->
                                <ComboBox x:Name="CombinedSortOrderComboBox" Width="150" Margin="0,0,5,0" SelectionChanged="CombinedSortOrderComboBox_SelectionChanged"/>
                            </StackPanel>

                            <!-- Combined Required Items List -->
                            <ListView x:Name="CombinedRequiredItemsListView" Margin="5">
                                <!-- ItemContainerStyle -->
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsComplete}" Value="True">
                                                <Setter Property="Background" Value="LightGreen"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <!-- Define ItemTemplate -->
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,5">
                                            <StackPanel Orientation="Horizontal" Margin="5">
                                                <!-- Item Icon -->
                                                <Image Source="{Binding Item.IconLink}" Width="50" Height="50" Margin="0,0,5,0"/>
                                                <!-- Item Details -->
                                                <StackPanel Orientation="Vertical">
                                                    <!-- Item Name and FIR Icon -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Item.Name}" FontWeight="Bold"/>
                                                        <Image Source="pack://application:,,,/FIR.png"
                                                           Width="16" Height="16" Margin="5,0,0,0"
                                                           Visibility="{Binding IsFoundInRaid, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                    <!-- Quantity -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Quantity: "/>
                                                        <TextBlock Text="{Binding QuantityOwnedNeeded}"/>
                                                    </StackPanel>
                                                    <!-- Required For: Icon Name Pairs -->
                                                    <ItemsControl ItemsSource="{Binding RequiredForDetails}" Margin="0,5,0,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                                                    <Image Source="{Binding DisplayIcon}" Width="20" Height="20" Margin="0,0,5,0"/>
                                                                    <TextBlock Text="{Binding Name}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </DockPanel>
                    </TabItem>

                    <!-- Manual Combined Required Items Tab -->
                    <TabItem x:Name="ManualCombinedRequiredItemsTab" Header="Manual Combined Required Items">
                        <DockPanel>
                            <!-- Search and Filters -->
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
                                <TextBox x:Name="ManualCombinedSearchTextBox" Width="200" Margin="0,0,5,0" TextChanged="ManualCombinedSearchTextBox_TextChanged"/>
                                <!-- Completion Filter -->
                                <ComboBox x:Name="ManualCombinedCompletionFilterComboBox" Width="150" Margin="0,0,5,0" SelectionChanged="ManualCombinedCompletionFilterComboBox_SelectionChanged"/>
                                <!-- Sort Order -->
                                <ComboBox x:Name="ManualCombinedSortOrderComboBox" Width="150" Margin="0,0,5,0" SelectionChanged="ManualCombinedSortOrderComboBox_SelectionChanged"/>
                            </StackPanel>

                            <!-- Manual Combined Required Items List -->
                            <ListView x:Name="ManualCombinedRequiredItemsListView" Margin="5">
                                <!-- ItemContainerStyle -->
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsComplete}" Value="True">
                                                <Setter Property="Background" Value="LightGreen"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <!-- Define ItemTemplate -->
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,5">
                                            <StackPanel Orientation="Horizontal" Margin="5">
                                                <!-- Item Icon -->
                                                <Image Source="{Binding Item.IconLink}" Width="50" Height="50" Margin="0,0,5,0"/>
                                                <!-- Item Details -->
                                                <StackPanel Orientation="Vertical">
                                                    <!-- Item Name and FIR Icon -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Item.Name}" FontWeight="Bold"/>
                                                        <Image Source="pack://application:,,,/FIR.png"
                                                           Width="16" Height="16" Margin="5,0,0,0"
                                                           Visibility="{Binding IsFoundInRaid, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                    <!-- Quantity with Increment/Decrement Buttons -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Quantity: "/>
                                                        <TextBlock Text="{Binding QuantityOwnedNeeded}"/>
                                                        <Button Content="-" Width="20" Margin="5,0" Click="ManualCombinedDecrementButton_Click"/>
                                                        <Button Content="+" Width="20" Click="ManualCombinedIncrementButton_Click"/>
                                                    </StackPanel>
                                                    <!-- Required For: Icon Name Pairs -->
                                                    <ItemsControl ItemsSource="{Binding RequiredForDetails}" Margin="0,5,0,0">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                                                    <Image Source="{Binding DisplayIcon}" Width="20" Height="20" Margin="0,0,5,0"/>
                                                                    <TextBlock Text="{Binding Name}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </DockPanel>
                    </TabItem>
                </TabControl>
            </DockPanel>
        </Grid>
        <!-- Loading Indicator -->
        <Grid x:Name="LoadingGrid" Background="#AA000000" Visibility="{Binding IsRequiredDataLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="Loading..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
